{
  "name": "@perkos/util-config",
  "version": "1.0.0",
  "description": "Configuration management utilities for PerkOS services",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "tsc --noEmit",
    "test": "vitest run",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "config",
    "configuration",
    "environment",
    "perkos",
    "x402"
  ],
  "author": "PerkOS",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/PerkOS-xyz/pkg-util-config.git"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
